<div class="center3">
    <div class="accordion" id="accordionExample" style="margin-top:1cm; width:90%;">
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                    <h4>Ventas</h4>
                </button>
            </h2>

            <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <div class="row row-cols-1 row-cols-md-2 g-4">
                        @foreach (var item in MenuItem)
                        {
                            @if (item.Section == 1)
                            {
                                <div class="col" style="max-width: 540px;">
                                    <a href="@item.LinkPage" class="list-group-item list-group-item-action list-group-item-secondary">
                                        <div class="card">
                                            <div class="row g-0">
                                                <div class="col-md-3">
                                                    <i class="fa-solid @item.Icon fa-2xl iconos"></i>
                                                </div>
                                                <div class="col-md-9">
                                                    <h5 class="titulo">
                                                        @item.Title
                                                    </h5>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

