<div class="modal @ModalClass" tabindex="-1" role="dialog" style="display:@ModalDisplay">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" title="Cerrar" class="btn" data-dismiss="modal" @onclick="() => Close()" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>@ChildContent</p>
            </div>
            <div class="modal-footer">
                <button type="button" title="Borrar" class="btn btn-danger" @onclick="Delete">Borrar</button>
                <button type="button" title="Cerrar" class="btn btn-secondary" data-dismiss="modal" @onclick="() => Close()">Cerrar</button>
            </div>
        </div>
    </div>
</div>